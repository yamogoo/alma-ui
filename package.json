    "build:server": "tsc -p tsconfig.node.json && pnpm copy:env",
    "build:client": "vue-tsc -b tsconfig.app.json && vite build --mode production --config vite.config.ts",
    "start:server": "cd dist/server && node main.js",
    "start": "cd dist/server && node main.js",
    "build": "pnpm build:server && pnpm build:client",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
